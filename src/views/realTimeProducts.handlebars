<h1>Eliminar Producto</h1>
<form id="delete-prod-form">
    <label for="id_prod">
        ID de producto
        <input id="id_prod" type="number">
    </label>
    <button type="submit">Eliminar</button>
</form>
<h1>Nuevo Producto</h1>
<form id="new-prod-form">
    <div style="padding-bottom:5px">
        <label for="title">Titulo</label>
        <input id="title" type="text"required>
    </div>
    <div style="padding-bottom:5px">
        <label for="description">Descripción</label>
        <input id="description" type="text" required>
    </div>
    <div style="padding-bottom:5px">
        <label for="code">Código</label>
        <input id="code" type="text" required>
    </div>
    <div style="padding-bottom:5px">
        <label for="price">Precio</label>
        <input id="price" type="number" required>
    </div>
    <div style="padding-bottom:5px">
        <label for="stock">Stock</label>
        <input id="stock" type="number" required>
    </div>
    <div style="padding-bottom:5px">
        <label for="category">Categoria</label>
        <input id="category" type="text" required>
    </div>
    <button id="submit-button" type="submit">Agregar</button>
</form>

<h1 style="text-align:center;">Productos en tiempo real</h1>
<div id="rt-products-container">
</div>
